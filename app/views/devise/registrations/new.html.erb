<h2 class="text-center">Sign up</h2><br/>

<div class="container h-100">

  <div class="row h-100 justify-content-center align-items-center">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "col-12") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>


      <div class="form-group">
        <%= f.email_field :email,
                          autofocus: true,
                          autocomplete: "email",
                          class: "form-control mb-3",
                          placeholder: "Email" %>
      </div>

      <div class="form-group">
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password,
                             autocomplete: "new-password",
                             class: "form-control mb-3",
                             placeholder: "password" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation,
                             autocomplete: "new-password",
                             class: "form-control mb-3",
                             placeholder: "password_confirmation" %>
      </div>

      <div>
        already signed in? <%= link_to 'Login', new_user_session_path,class: "link-secondary" %>
      </div>

      <div class="actions text-center">
        <%= f.submit "Sign up", class: "btn btn-dark" %>
      </div>

    <% end %>

  </div>

</div>















