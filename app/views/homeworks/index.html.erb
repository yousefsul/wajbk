<p id="notice"><%= notice %></p>

<h1 class="text-center">Homeworks</h1>
<% @count= 0  %>
<table class="table table-hover table-dark ">
  <thead>
    <tr>
      <th scope="col">Number</th>
      <th scope="col">Speciality</th>
      <th scope="col">Course name</th>
      <th scope="col">Question</th>
      <th scope="col">Submission deadline</th>
      <th scope="col">Homework status</th>
      <th scope="col">Payment status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @homeworks.each do |homework| %>
    <% @count = @count+1 %>
      <tr>
        <td scope="row"><%= @count %></td>
        <td><%= homework.speciality %></td>
        <td><%= homework.course_name %></td>
        <td><%= homework.question %></td>
        <td><%= homework.submission_deadline %></td>
        <td><%= homework.homework_status %></td>
        <td><%= homework.payment_status %></td>
        <td><%= link_to 'Show', homework %></td>
        <td><%= link_to 'Edit', edit_homework_path(homework) %></td>
        <td><%= link_to 'Destroy', homework, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Homework', new_homework_path %>
